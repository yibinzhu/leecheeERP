/* pages/orderList/orderList.wxss */
.text-comment{
  font-size: 13px;
  color: #888888;
}
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  height: 240rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}
.commodity_attr_box_menu{
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}
.save-btn{
    position: fixed;
    bottom:30rpx;
    width: 100%;
    /* margin-left:10px;
    margin-right:10px; */
}
.layout_row{
  display: flex;
  flex-direction: row;
  justify-items: center;
}
.layout_col{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;
}
.thumbnail-box{
  position: relative;
}
.thumbnail-img{
  width: 60px; 
  height: 60px; 
  display: block;
  margin-right:10px;
  position: absolute;
  top:0;
  left:0;
}
.menu-btn{
width: 100%;
position:relative;
display:block;
margin-left:auto;
margin-right:auto;
padding-left:14px;
padding-right:14px;
box-sizing:border-box;
font-size:18px;
text-align:center;
text-decoration:none;
line-height:2.55555556;
-webkit-tap-highlight-color:transparent;
overflow:hidden;
color:#000000;
background-color:#F8F8F8;
border-bottom:solid 1px #d9d9d9;
}
.menu-btn-cancel{
  position: fixed;
  bottom:0;
}
.sort-item{
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding-top:10px;
}
.sort-btn{
  text-align: center;
  vertical-align: center;
}