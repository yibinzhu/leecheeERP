<!-- 底部菜单开始 -->
<view class='bar-menu-bttom layout-row' wx:if="{{!showAdminListStatus}}">
  <view class='menu-item layout-col'><image src='../../../images/ad/yijianfankui.png' style='width:32px;height:32px;' bindtap='showMenu'></image><text>{{language.bianji}}</text></view>
</view>


  <!--底部一级菜单  -->
  <view class="commodity_screen" bindtap="hideMenu" wx:if="{{showMenuStatus}}"></view>
  <!--弹出框  -->
  <view animation="{{animationData}}" class="commodity_attr_box_menu" wx:if="{{showMenuStatus}}" catchtouchmove='catchTouch'>
 <!-- 底部弹出菜单内容开始 -->

<view class='layout_col'>
  
  <view class='menu-btn' bindtap='showAdminList'>{{language.tianjiaquhuoren}}</view>
  <view class='menu-btn' bindtap='showAdminConfirm'>{{language.chengweiguanliyuan}}</view>
  <view class='menu-btn' bindtap='showDelConfirm'>{{language.shanchuyonghu}}</view>

  <view class='menu-btn menu-btn-cancel' bindtap='hideMenu'>{{language.quxiao}}</view>
</view>
