            </view></view>
            <view><view class="placeholder">
                       <view class="weui-flex__item" style="text-align:right"><view><text class='text-comment'>{{language.gong}}：</text>₩{{filters.formatPrice(orderData[0].totalPrice)}}</view><view style="font-size: 13px;color: #888888;"></view></view>
